@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="wrapper fadeInDown">
    <div id="formContent">

        <!-- Heading -->
        <div class="fadeIn first pt-4 mb-3">
            <h2>@ViewData["Title"]</h2>
        </div>

        <!-- Register Form -->
        <form id="account" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <!-- Fist and last name -->
            <div class="form-group fadeIn second">
                <div class="form-group mb-sm-0 mb-lg-2">
                    <div><input type="text" asp-for="Input.FirstName" class="form-control" placeholder="First Name" /></div>
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group mb-sm-0 mb-lg-2">
                    <div><input type="text" asp-for="Input.LastName" class="form-control" placeholder="Last Name" /></div>
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
            </div>

            <!-- UserName -->
            <div class="form-group fadeIn third mb-lg-2">
                <div><input type="text" asp-for="Input.UserName" class="form-control" placeholder="Username" /></div>
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>

            <!-- Email -->
            <div class="form-group fadeIn fourth">
                <div><input type="text" asp-for="Input.Email" class="form-control" placeholder="Email" /></div>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Password / Confirm Password-->
            <div class="form-group fadeIn fifth">
                <div class="form-group mb-lg-2">
                    <div><input type="password" asp-for="Input.Password" class="form-control" placeholder="Password" /></div>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group mb-lg-2">
                    <div><input type="password" asp-for="Input.ConfirmPassword" class="form-control" placeholder=" Confirm Password" /></div>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <!-- DOB & Account Type-->
            <div class="form-group row fadeIn sixth mb-0">
                <div class="col-1"></div>
                <div class="form-group col-5">
                    <label asp-for="Input.DOB">Date Of Birth:</label>
                    <input type="date" asp-for="Input.DOB" class="form-control" />
                    <span asp-validation-for="Input.DOB" class="text-danger"></span>
                </div>
                <div class="col-5">
                    <label asp-for="Input.AccountType">Account Type:</label>
                    <select class="form-control" asp-for="Input.AccountType">
                        <option>Fan</option>
                        <option>Organizer</option>
                    </select>
                </div>
                <div class="col"></div>
            </div>

            <input type="submit" class="fadeIn seventh mb-2" value="Sign up">
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
