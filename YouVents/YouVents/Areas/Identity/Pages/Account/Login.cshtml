@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="wrapper fadeInDown">
    <div id="formContent">
        
        <!-- Heading -->
        <div class="fadeIn first pt-4 mb-3">
            <h2>@ViewData["Title"]</h2>
        </div>

        <!-- Login Form -->
        <form id="account" method="post">
            <div class="form-group fadeIn second mb-4">
                <input type="text" asp-for="Input.Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group fadeIn third mb-4">
                <input type="password" asp-for="Input.Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <!-- Remember Me -->
            <div class="checkbox fadeIn fourth mb-2">
                <label asp-for="Input.RememberMe">
                    <input asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>

            <input type="submit" class="fadeIn fifth mb-3" value="Log In">

            <!-- Forgot Password / Register -->
            <div class="form-group">
                <p class="fadeIn sixth">
                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                </p>
                <p class="fadeIn seventh">
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
