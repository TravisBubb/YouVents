@page
@model YouVents.Pages.Events.BrowseModel
@{
    ViewData["Title"] = "Browse";
    var Culture = new System.Globalization.CultureInfo("en-US");
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>


<div class="container-fluid">
    <div class="row">
        <div class="col-12 text-center">
            <h2 class="mb-3">Upcoming Events:</h2>
            <!-- filtering menu -->
            <div class="container-fluid" style="display: flex;">
                <div class="w-25 sticky border-right">
                    <form id="FilterForm" method="post">
                        <div class="col-11">
                            <div class="my-2">
                                <div style="font-size:1.5em;">Filter By:</div>
                            </div>
                            <div class="my-3">
                                <input class="form-control" id="EventSearch" type="text" placeholder="Event Name" />
                            </div>
                            <div class="my-3">
                                <div class="px-0">
                                    <input asp-for="Input.Date" id="DateSearch" type="date" placeholder="date" class="form-control" />
                                </div>
                            </div>
                            <div class="my-3">
                                <div class="input-group px-0">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">$</span>
                                    </div>
                                    <input asp-for="Input.Price" id="PriceSearch" type="text" placeholder="Price" class="form-control">
                                </div>
                            </div>
                            <div class="my-3">
                                <input asp-for="Input.City" id="CitySearch" type="text" placeholder="City" class="form-control" />
                            </div>

                            <div class="px-0">
                                <select asp-for="Input.SortMethod" id="SortBy" class="input-sm form-control p-0">
                                    <option>Sort By</option>
                                    <option>Price (Low-High)</option>
                                    <option>Price (High-Low)</option>
                                    <option>Date (Ascend)</option>
                                    <option>Date (Descend)</option>
                                </select>
                            </div>
                            <div class="my-3">
                                <input class="btn btn-success" id="FilterBtn" type="submit" value="Apply Filters" />
                            </div>
                        </div>
                    </form>
                </div>
                <!-- Event listings -->
                <div>
                    <div id="EventList" class="mt-4" style="min-height: 70vh;">
                        <!-- Loop through all of the events and display them -->
                        @foreach (var E in Model.Events)
                        {
                            <div class="w-100 mx-auto mb-4">
                                <span>
                                    <div class="row justify-content-center">
                                        <div class="col mx-2 my-auto">
                                            <a asp-page="/Events/View" asp-route-id="@E.Id" asp-route-edit=0>
                                                <img align="right" style="max-height: 12vw; width:12vw" class="mx-0 px-0 d-block" src="@E.Image" />
                                            </a>
                                        </div>
                                        <div class="col text-left my-auto">
                                            <p class="m-0 w-75" style="font-size: calc(10px + .7vw); text-shadow: -1px 1px 0 #FFFFFF, 1px 1px 0 #FFFFFF, 1px -1px 0 #FFFFFF, -1px -1px 0 #FFFFFF;">
                                                <a asp-page="/Events/View" asp-route-id="@E.Id" asp-route-edit=0><strong>@E.Name</strong></a>
                                            </p>
                                            <p class="text-black-50 m-0" id="Date" style="font-size: calc(8px + .5vw);">Date: @Convert.ToDateTime(E.Date).ToString("ddd, MMM dd yyyy")</p>
                                            <p class="text-black-50 m-0" id="Time" style="font-size: calc(8px + .5vw);">Time: @Convert.ToDateTime(E.Time).ToString("h:mm tt")</p>
                                            <p class="text-black-50 m-0" id="Price" style="font-size: calc(8px + .5vw);">Price: @E.Price.ToString("C", Culture)</p>
                                            <p class="text-black-50 m-0" id="Location" style="font-size: calc(8px + .5vw);">Location: @E.City, @E.State</p>
                                        </div>
                                    </div>
                                </span>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

